{
  "variables": {
    "os": "centos-7",
    "docker_image": "centos:centos7",
    "docker_user": "genebean",
    "build_name": "base",
    "iso_url": "http://mirrors.mit.edu/centos/7/isos/x86_64/CentOS-7-x86_64-Minimal-1611.iso",
    "iso_checksum": "71a7aa147877b413497cdff5b1e0aa5bc0c9484f"
  },
  "builders": [
    {
      "name": "virtualbox-{{user `build_name`}}-{{user `os`}}",
      "type": "virtualbox-iso",
      "vm_name": "packer-virtualbox-{{user `build_name`}}-{{user `os`}}",
      "boot_command": [
        "<tab>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<wait5>",
        " ipv6.disable=1 biosdevname=0 net.ifnames=0 quiet vga=791",
        " text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg",
        "<wait5><enter>"
      ],
      "boot_wait": "10s",
      "disk_size": 40520,
      "guest_os_type": "RedHat_64",
      "http_directory": "http",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "sha1",
      "iso_url": "{{user `iso_url`}}",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo '/sbin/halt -h -p' > /tmp/shutdown.sh; echo 'vagrant'|sudo -S sh '/tmp/shutdown.sh'",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "1024" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "1" ],
        [ "modifyvm", "{{.Name}}", "--audio", "none" ]
      ]
    },
    {
      "name": "vmware-{{user `build_name`}}-{{user `os`}}",
      "type": "vmware-iso",
      "vm_name": "packer-vmware-{{user `build_name`}}-{{user `os`}}",
      "boot_command": [
        "<tab>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<wait5>",
        "ipv6.disable=1 biosdevname=0 net.ifnames=0 quiet vga=791",
        " text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg",
        "<wait5><enter>"
      ],
      "boot_wait": "10s",
      "disk_size": 40520,
      "guest_os_type": "centos-64",
      "http_directory": "http",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "sha1",
      "iso_url": "{{user `iso_url`}}",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo '/sbin/halt -h -p' > /tmp/shutdown.sh; echo 'vagrant'|sudo -S sh '/tmp/shutdown.sh'",
      "tools_upload_flavor": "linux",
      "vmx_data": {
        "memsize": "1024",
        "numvcpus": "1",
        "cpuid.coresPerSocket": "1"
      }
    },
    {
      "name": "docker-{{user `build_name`}}-{{user `os`}}",
      "type": "docker",
      "image": "{{user `docker_image`}}",
      "pull": true,
      "export_path": "packer-docker-{{user `build_name`}}-{{user `os`}}.tar"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "only": [ "docker-{{user `build_name`}}-{{user `os`}}" ],
      "script": "scripts/docker-prep.sh"
    },
    {
      "type": "shell",
      "scripts": [
        "scripts/networking.sh",
        "scripts/base.sh",
        "scripts/vagrant.sh"
      ],
      "override": {
        "virtualbox-{{user `build_name`}}-{{user `os`}}": {
          "execute_command": "echo 'vagrant'|{{ .Vars }} sudo -E -S sh '{{ .Path }}'"
        },
        "vmware-{{user `build_name`}}-{{user `os`}}": {
          "execute_command": "echo 'vagrant'|{{ .Vars }} sudo -E -S sh '{{ .Path }}'"
        }
      }
    },
    {
      "type": "shell",
      "only": [ "virtualbox-{{user `build_name`}}-{{user `os`}}" ],
      "execute_command": "echo 'vagrant'|{{ .Vars }} sudo -E -S sh '{{ .Path }}'",
      "script": "scripts/virtualbox.sh"
    },
    {
      "type": "shell",
      "only": [ "vmware-{{user `build_name`}}-{{user `os`}}" ],
      "execute_command": "echo 'vagrant'|{{ .Vars }} sudo -E -S sh '{{ .Path }}'",
      "script": "scripts/vmware.sh"
    },
    {
      "type": "shell",
      "scripts": [
        "scripts/cleanup.sh"
      ],
      "override": {
        "virtualbox-{{user `build_name`}}-{{user `os`}}": {
          "execute_command": "echo 'vagrant'|{{ .Vars }} sudo -E -S sh '{{ .Path }}'"
        },
        "vmware-{{user `build_name`}}-{{user `os`}}": {
          "execute_command": "echo 'vagrant'|{{ .Vars }} sudo -E -S sh '{{ .Path }}'"
        }
      }
    },
    {
      "type": "shell",
      "except": [ "docker-{{user `build_name`}}-{{user `os`}}" ],
      "scripts": [
        "scripts/zerodisk.sh"
      ],
      "override": {
        "virtualbox-{{user `build_name`}}-{{user `os`}}": {
          "execute_command": "echo 'vagrant'|{{ .Vars }} sudo -E -S sh '{{ .Path }}'"
        },
        "vmware-{{user `build_name`}}-{{user `os`}}": {
          "execute_command": "echo 'vagrant'|{{ .Vars }} sudo -E -S sh '{{ .Path }}'"
        }
      }
    }
  ],
  "post-processors": [
    {
      "type": "docker-import",
      "only": [ "docker-{{user `build_name`}}-{{user `os`}}" ],
      "repository": "{{user `docker_user`}}/{{user `os`}}-{{user `build_name`}}"
    }
  ]
}
