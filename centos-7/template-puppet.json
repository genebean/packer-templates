{
  "variables": {
    "os": "centos-7"
  },
  "builders": [
    {
      "name": "virtualbox-vagrant-puppet-{{user `os`}}",
      "type": "virtualbox-ovf",
      "source_path": "output-virtualbox-base-{{user `os`}}/packer-virtualbox-base-{{user `os`}}.ovf",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo '/sbin/halt -h -p' > /tmp/shutdown.sh; echo 'vagrant'|sudo -S sh '/tmp/shutdown.sh'"
    },
    {
      "name": "vmware-vagrant-puppet-{{user `os`}}",
      "type": "vmware-vmx",
      "source_path": "output-vmware-base-{{user `os`}}/packer-vmware-base-{{user `os`}}.vmx",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo '/sbin/halt -h -p' > /tmp/shutdown.sh; echo 'vagrant'|sudo -S sh '/tmp/shutdown.sh'"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'vagrant'|sudo -S sh '{{.Path}}'",
      "override": {
        "virtualbox-vagrant-puppet-{{user `os`}}": {
          "scripts": [
            "scripts/puppet.sh",
            "scripts/cleanup.sh"
          ]
        },
        "vmware-vagrant-puppet-{{user `os`}}": {
          "scripts": [
            "scripts/puppet.sh",
            "scripts/cleanup.sh"
          ]
        }
      }
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "override": {
        "virtualbox": {
          "output": "boxes/{{user `os`}}-puppet-virtualbox.box"
        },
        "vmware": {
          "output": "boxes/{{user `os`}}-puppet-vmware.box"
        }
      }
    }
  ]
}
