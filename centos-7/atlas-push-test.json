{
  "variables": {
    "os": "centos-7",
    "docker_image": "centos:centos7",
    "docker_user": "genebean",
    "build_name": "nocm",
    "iso_url": "http://reflector.westga.edu/repos/CentOS/7/isos/x86_64/CentOS-7-x86_64-Minimal-1503-01.iso",
    "iso_checksum": "7c1e34e95c991175290d704dbdcc6531774cbecb"
  },
  "builders": [
    {
      "name": "docker-{{user `build_name`}}-{{user `os`}}",
      "type": "docker",
      "image": "{{user `docker_image`}}",
      "pull": true,
      "export_path": "packer-docker-{{user `build_name`}}-{{user `os`}}.tar"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "scripts/cleanup.sh",
      "scripts/zerodisk.sh"
    }
  ],
  "push": {
    "name": "genebean/centos-7-nocm",
    "vcs": true
  }
}
