{
  "variables": {
    "os": "centos-6",
    "docker_image": "centos:centos6",
    "docker_user": "genebean"
  },
  "builders": [
    {
      "name": "virtualbox-base-{{user `os`}}",
      "type": "virtualbox-iso",
      "vm_name": "packer-virtualbox-base-{{user `os`}}",
      "boot_command": [
        "<tab>",
        "<wait5>",
        " quiet vga=791",
        " text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg",
        "<wait5><enter>"
      ],
      "boot_wait": "10s",
      "disk_size": 40520,
      "guest_os_type": "RedHat_64",
      "http_directory": "http",
      "iso_checksum": "2ed5ea551dffc3e4b82847b3cee1f6cd748e8071",
      "iso_checksum_type": "sha1",
      "iso_url": "http://reflector.westga.edu/repos/CentOS/6.7/isos/x86_64/CentOS-6.7-x86_64-minimal.iso",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo '/sbin/halt -h -p' > /tmp/shutdown.sh; echo 'vagrant'|sudo -S sh '/tmp/shutdown.sh'",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "1024" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "1" ]
      ]
    },
    {
      "name": "vmware-base-{{user `os`}}",
      "type": "vmware-iso",
      "vm_name": "packer-vmware-base-{{user `os`}}",
      "boot_command": [
        "<tab>",
        "<wait5>",
        "quiet vga=791",
        " text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg",
        "<wait5><enter>"
      ],
      "boot_wait": "10s",
      "disk_size": 40520,
      "guest_os_type": "centos-64",
      "http_directory": "http",
      "iso_checksum": "2ed5ea551dffc3e4b82847b3cee1f6cd748e8071",
      "iso_checksum_type": "sha1",
      "iso_url": "http://reflector.westga.edu/repos/CentOS/6.7/isos/x86_64/CentOS-6.7-x86_64-minimal.iso",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo '/sbin/halt -h -p' > /tmp/shutdown.sh; echo 'vagrant'|sudo -S sh '/tmp/shutdown.sh'",
      "tools_upload_flavor": "linux",
      "vmx_data": {
        "memsize": "1024",
        "numvcpus": "1",
        "cpuid.coresPerSocket": "1"
      }
    },
    {
      "name": "docker-base-{{user `os`}}",
      "type": "docker",
      "image": "{{user `docker_image`}}",
      "pull": true,
      "export_path": "packer-docker-base-{{user `os`}}.tar"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/base.sh",
        "scripts/epel.sh",
        "scripts/vagrant.sh"
      ],
      "override": {
        "virtualbox-base-{{user `os`}}": {
          "execute_command": "echo 'vagrant'|{{ .Vars }} sudo -E -S sh '{{ .Path }}'"
        },
        "vmware-base-{{user `os`}}": {
          "execute_command": "echo 'vagrant'|{{ .Vars }} sudo -E -S sh '{{ .Path }}'"
        }
      }
    },
    {
      "type": "shell",
      "only": [ "virtualbox-base-{{user `os`}}" ],
      "script": "scripts/virtualbox.sh"
    },
    {
      "type": "shell",
      "only": [ "vmware-base-{{user `os`}}" ],
      "script": "scripts/vmware.sh"
    },
    {
      "type": "shell",
      "script": "scripts/cleanup.sh",
      "override": {
        "virtualbox-base-{{user `os`}}": {
          "execute_command": "echo 'vagrant'|{{ .Vars }} sudo -E -S sh '{{ .Path }}'"
        },
        "vmware-base-{{user `os`}}": {
          "execute_command": "echo 'vagrant'|{{ .Vars }} sudo -E -S sh '{{ .Path }}'"
        }
      }
    }
  ],
  "post-processors": [
    {
      "type": "docker-import",
      "repository": "{{user `docker_user`}}/{{user `os`}}-base"
    }
  ]
}
