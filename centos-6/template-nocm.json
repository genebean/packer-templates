{
  "variables": {
    "os": "centos-6",
    "docker_image": "genebean/centos-6-base",
    "docker_user": "genebean"
  },
  "builders": [
    {
      "name": "virtualbox-vagrant-nocm-{{user `os`}}",
      "type": "virtualbox-ovf",
      "source_path": "output-virtualbox-base-{{user `os`}}/packer-virtualbox-base-{{user `os`}}.ovf",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo '/sbin/halt -h -p' > /tmp/shutdown.sh; echo 'vagrant'|sudo -S sh '/tmp/shutdown.sh'"
    },
    {
      "name": "vmware-vagrant-nocm-{{user `os`}}",
      "type": "vmware-vmx",
      "source_path": "output-vmware-base-{{user `os`}}/packer-vmware-base-{{user `os`}}.vmx",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo '/sbin/halt -h -p' > /tmp/shutdown.sh; echo 'vagrant'|sudo -S sh '/tmp/shutdown.sh'"
    },
    {
      "name": "docker-nocm-{{user `os`}}",
      "type": "docker",
      "image": "{{user `docker_image`}}",
      "pull": false,
      "export_path": "packer-docker-nocm-{{user `os`}}.tar"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "scripts/cleanup.sh",
      "override": {
        "virtualbox-vagrant-nocm-{{user `os`}}": {
          "execute_command": "echo 'vagrant'|{{ .Vars }} sudo -E -S sh '{{ .Path }}'"
        },
        "vmware-vagrant-nocm-{{user `os`}}": {
          "execute_command": "echo 'vagrant'|{{ .Vars }} sudo -E -S sh '{{ .Path }}'"
        }
      }
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "override": {
        "virtualbox": {
          "output": "boxes/{{user `os`}}-nocm-virtualbox.box"
        },
        "vmware": {
          "output": "boxes/{{user `os`}}-nocm-vmware.box"
        }
      }
    },
    {
      "type": "docker-import",
      "repository": "{{user `docker_user`}}/{{user `os`}}-nocm"
    }
  ]
}
